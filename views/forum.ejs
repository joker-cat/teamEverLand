    <div id="talk">
        <div id="talkCatch">
            <h2 id="talkTitle"></h2>
            <div id="talkCate">
                <div id="popularCate" data-good="popular">熱門</div>
                <div id="latestCate" data-good="latest">最新</div>
                <div class="cate" data-good="clothes">穿搭</div>
                <div class="cate" data-good="sport">運動</div>
                <div class="cate" data-good="food">美食</div>
                <div class="cate" data-good="movie">書籍</div>
            </div>

        </div>
        <div id="talkOuter">
            <% data.forEach(function(value, index) { %>
                <div class="arti" data-articleId="<%= value.articleId %>">
                    <div class="imgOuter">
                        <img class="artiTitle" src="<%= value.articleImg.slice(2,-2).split(`, `)[0].slice(1,-1) %>"
                            alt="">
                    </div>

                    <p class="artiContent">
                        <%= value.articleContent.replace(/<br>/g, " ") %>
                    </p>

                    <hr>


                    <div class="likeComment">
                        <i class="fas fa-heart heartTar" data-like="<%= value.articleId %>"></i>
                        <span class="likeCommentSpan" data-like="<%= value.articleId %>"><%= value.articleLike %></span>
                        <i class="far fa-comment-alt"></i>
                        <span class="likeCommentSpan comtSpan" data-comt="<%= value.articleId %>"><%= value.articleComment %></span>
                    </div>
                </div>
                <% }) %>
        </div>

        <!-- 遮～～～～～～罩！ -->
        <div id="cover"
            style="background: #000; position: fixed; left: 0px; top: 0px; width: 100%; filter: alpha(opacity=30); opacity: 0.5; display: none; z-index: 1 ">
        </div>

        <!-- 點開之後的block。 -->
        <div id="artiMain">
            <input type="hidden" id="inputhidden" name="" value="">
            <button id="closeMain">
                <i class="fas fa-times"></i>
            </button>
            <div id="artiSub">


                <!-- swiper -->
                <div class="swiper-container">
                    <div class="swiper-wrapper" data-swi="mySwiper">
                        <!-- 塞照片的地方。 -->
                    </div>
                    <!-- Add Arrows -->
                    <div class="swiper-button-next" id="nextBtn"></div>
                    <div class="swiper-button-prev" id="prevBtn"></div>
                    <!-- Add Pagination -->
                    <div class="swiper-pagination"></div>
                </div>

                <br>
                <span id="forUserTime"></span>

                <div id="contentBox"></div>

                <!-- <hr> -->
                <div id="likecomtInner">
                    <!-- 這裡塞有多少愛心和留言數 -->
                </div>

                <div id="comtText">
                    <!-- 塞p進來 -->
                </div>

            </div>
            <div id="comtPlace">
                <textarea id="comtInput" type="text" placeholder="留言⋯"></textarea>
                <button id="comtSubmit">發佈</button>
            </div>
        </div>



        <!-- 新增文章按鈕 -->
        <div id="artiNew"><i class="fas fa-plus"></i></div>
        <div id="artiNewDiv">
            <button id="closeNew"><i class="fas fa-times"></i></button>
            <!-- 上傳的東西。 -->
            <form action="/forum/upload_file" method="post" enctype="multipart/form-data">
                <small>@iamamy</small><br>
                <input id="chooseInput" type="file" name="myfile" accept="image/*" multiple><br>

                <select name="selectCate" id="selectCate">
                    <option value="" disabled selected hidden>文章分類</option>
                    <option value="clothes">穿搭</option>
                    <option value="sport">運動</option>
                    <option value="food">美食</option>
                    <option value="movie">書籍</option>
                </select>

                <textarea type="text" id="contentArea" name="cgcg" value=""></textarea>
                <input id="postBtn" type="submit" value="發文">
            </form>

        </div>
    </div>


